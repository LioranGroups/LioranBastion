{
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,
    "declaration": true,

    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDir": "src"
  },
  "include": ["src"]
}
